<head>
  <title>TimeCamp</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-brand">
      TimeCamp
    </div>
    <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Home', welcome_index_path, :style => 'text-decoration:none' %></li>
    <% if current_user %>
        <li><%= link_to 'Fill Timesheet', new_user_record_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'View my timesheet entries', user_records_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Change Password', edit_user_registration_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Log Out', destroy_user_session_path , method: :delete, :style => 'text-decoration:none' %></li>
    </ul>
     <ul class="nav navbar-nav navbar-right">
      <li><a><span class="glyphicon glyphicon-user">&nbsp</span><%= current_user.email %></a></li>
    </ul>
    <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Log In', new_user_session_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Log In as Admin', admin_root_path, :style => 'text-decoration:none' %></li>
    </ul>
    <% end %>
  </div>
</nav>
<h2 style='padding-left:60px;'>Timesheet Entries</h2>
<br>
<div style='padding-left:60px; padding-right:60px'>
    <table class="table" style='padding-left:60px;'>
        <thead class="thead-dark">
        <tr>
            <th>Client Name:</th>
            <th>Project Name:</th>
            <th>Activity Type:</th>
            <th>Date:</th>
            <th>Start Time:</th>
            <th>End Time:</th>
            <th>Description:</th>
        </tr>
        </thead>
    <tbody>
    <% @user_records.each do |user_record| %>
        <tr>
        <td><%= user_record.client_name %></td>
        <td><%= user_record.project_name %></td>
        <td><%= user_record.activity_type %></td>
        <td><%= user_record.date %></td>
        <td><%= user_record.start_time %></td>
        <td><%= user_record.end_time %></td>
        <td><%= user_record.description %></td>
        </tr>
    <% end %>
    </tbody>
    </table>
</div>
</body>