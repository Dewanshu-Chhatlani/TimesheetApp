<head>
  <title>Timesheet Application</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-brand">
      TimeCamp
    </div>
    <ul class="nav navbar-nav">
        <li class="active"><%= link_to 'Home', welcome_index_path, :style => 'text-decoration:none' %></li>
    <% if current_user %>
        <li><%= link_to 'Fill Timesheet', new_user_record_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'View my timesheet entries', user_records_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Change Password', edit_user_registration_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Log Out', destroy_user_session_path , method: :delete, :style => 'text-decoration:none' %></li>
    </ul>
     <ul class="nav navbar-nav navbar-right">
      <li><a><span class="glyphicon glyphicon-user">&nbsp</span><%= current_user.email %></a></li>
    </ul>
    <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Log In', new_user_session_path, :style => 'text-decoration:none' %></li>
        <li><%= link_to 'Log In as Admin', admin_root_path, :style => 'text-decoration:none' %></li>
    </ul>
    <% end %>
  </div>
</nav>
<h2 style='padding-left:60px'>Sign up</h2>
<br>
<div style="width:800px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" style='padding-left:60px;'>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <br>
      <div class="field" style='padding-left:60px;'>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="field" style='padding-left:60px;'>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="actions" style='padding-left:60px;'>
        <%= f.submit "Sign up" %>
      </div>
  </div>
<% end %>

</body>